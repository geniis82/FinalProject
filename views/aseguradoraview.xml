<odoo>
    <data>
        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="final_project.tree_view_aseguradoramodel">
            <field name="name">Aseguradoras</field>
            <field name="model">final_project.aseguradoramodel</field>
            <field name="arch" type="xml">
                <tree>
                    <field name='photo'/>
                    <field name='name'/>
                </tree>
            </field>
        </record>



        <record model="ir.ui.view" id="final_project.kanban_view_aseguradoramodel">
            <field name="name">Aseguradoras</field>
            <field name="model">final_project.aseguradoramodel</field>
            <field name="arch" type="xml">
                <kanban class="o_res_partner_kanban">
                    <field name="photo"/>
                    <field name="name"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="o_kanban_image" style="width:50%">
                                    <field name="photo" nolabel="1" widget="image" class="oe_right oe_avatar"/>
                                </div>
                                <div class="oe_kanban_details" >
                                    <strong>
                                        <field name="name" class="oe_inline"/>
                                    </strong>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record model="ir.ui.view" id="final_project.form_view_aseguradoramodel">
            <field name="name">Aseguradoras</field>
            <field name="model">final_project.aseguradoramodel</field>
            <field name="arch" type="xml">
                <form string="Aseguradora">
                    <sheet>
                        <notebook>
                            <page string="InformaciÃ³n" >
                                <group name="root">
                                    <group name='left'>
                                        <field name='photo'/>
                                        <field name='name'/>
                                    </group>
                                </group>
                            </page>
                            <page string="Polizas">
                                <group name="root">
                                    <group name='left'>
                                        <field name="polizas"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>


        <!-- actions opening views on models -->

        <record model="ir.actions.act_window" id="final_project.aseguradoras_action_window">
            <field name="name">Aseguradoras</field>
            <field name="res_model">final_project.aseguradoramodel</field>
            <field name="view_mode">kanban,tree,form</field>
        </record>


